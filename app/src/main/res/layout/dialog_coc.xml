<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clear">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/clear">

        <io.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/dialog_title_wrap_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_roundRect_bottomLeftRadius="16dp"
            app:shape_roundRect_bottomRightRadius="16dp"
            app:shape_roundRect_topLeftRadius="16dp"
            app:shape_roundRect_topRightRadius="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff">

                <LinearLayout
                    android:id="@+id/info_layout"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <io.github.florent37.shapeofview.shapes.RoundRectView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/profile_layout"
                        app:shape_roundRect_borderWidth="3dp"
                        app:shape_roundRect_borderColor="@color/color_f1f1f4"
                        app:shape_roundRect_bottomLeftRadius="26dp"
                        app:shape_roundRect_topRightRadius="26dp"
                        app:shape_roundRect_topLeftRadius="26dp"
                        app:shape_roundRect_bottomRightRadius="26dp">

                        <RelativeLayout
                            android:id="@id/back_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorAccent">


                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/back5"
                                android:id="@+id/back_image_view"/>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/face_image_view"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/group_191" />


                        </RelativeLayout>
                    </io.github.florent37.shapeofview.shapes.RoundRectView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/title_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="팝업 텍스트"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/content_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="팝업 텍스트"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/one_button_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info_layout"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <io.github.florent37.shapeofview.shapes.RoundRectView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        app:shape_roundRect_bottomLeftRadius="12dp"
                        app:shape_roundRect_bottomRightRadius="12dp"
                        app:shape_roundRect_topLeftRadius="12dp"
                        app:shape_roundRect_topRightRadius="12dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/close_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#6E7583"
                                android:text="닫기"
                                android:textColor="@color/color_ffffff"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </io.github.florent37.shapeofview.shapes.RoundRectView>


                    <io.github.florent37.shapeofview.shapes.RoundRectView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        app:shape_roundRect_bottomLeftRadius="12dp"
                        app:shape_roundRect_bottomRightRadius="12dp"
                        app:shape_roundRect_topLeftRadius="12dp"
                        app:shape_roundRect_topRightRadius="12dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/button_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/colorAccent"
                                android:text="남은횟수 : 3"
                                android:textColor="@color/color_ffffff"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </io.github.florent37.shapeofview.shapes.RoundRectView>
                </LinearLayout>

            </RelativeLayout>
        </io.github.florent37.shapeofview.shapes.RoundRectView>
    </RelativeLayout>
</RelativeLayout>