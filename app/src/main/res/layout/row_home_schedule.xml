<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <io.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_roundRect_borderColor="@color/color_f1f1f4"
        app:shape_roundRect_borderWidth="1dp"
        app:shape_roundRect_bottomLeftRadius="12dp"
        app:shape_roundRect_bottomRightRadius="12dp"
        app:shape_roundRect_topLeftRadius="12dp"
        app:shape_roundRect_topRightRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_fafafc"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/clock"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/date_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"
                        android:text="11:00~"
                        android:textColor="@color/color_a3a7b6"
                        android:textSize="12dp" />

                </LinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/content_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="16dp"
                    android:maxLines="2"
                    android:text="최대는9글자다"
                    android:textColor="@color/color_3a3a3c"
                    android:textSize="14dp"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/state_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="16dp"
                    android:background="@color/clear"
                    android:text="완료하기"
                    android:textColor="@color/color_a3a7b6"
                    android:textSize="12dp" />


            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/default_text_view"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:background="@color/color_fafafc"
                android:gravity="center"
                android:text="하우스\n일정이 없어요"
                android:textColor="@color/color_e4e6eb"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/blur_view"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_centerInParent="true"
                android:background="#D9FFFFFF"
                android:orientation="vertical"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stemp_image_view"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:visibility="visible"
                android:layout_centerInParent="true"
                android:src="@drawable/stemp" />
        </RelativeLayout>

    </io.github.florent37.shapeofview.shapes.RoundRectView>

</LinearLayout>