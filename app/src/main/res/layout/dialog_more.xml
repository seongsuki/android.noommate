<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clear"
    android:orientation="vertical">

    <io.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_roundRect_topLeftRadius="12dp"
        app:shape_roundRect_topRightRadius="12dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="40dp"
                app:shape_roundRect_borderWidth="1dp"
                app:shape_roundRect_borderColor="@color/colorAccent"
                app:shape_roundRect_topRightRadius="12dp"
                app:shape_roundRect_topLeftRadius="12dp"
                app:shape_roundRect_bottomLeftRadius="12dp"
                app:shape_roundRect_bottomRightRadius="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/block_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="차단하기"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/color_ffffff"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>



            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:shape_roundRect_borderColor="@color/colorAccent"
                app:shape_roundRect_borderWidth="1dp"
                app:shape_roundRect_topRightRadius="12dp"
                app:shape_roundRect_topLeftRadius="12dp"
                app:shape_roundRect_bottomLeftRadius="12dp"
                app:shape_roundRect_bottomRightRadius="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/report_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="신고하기"
                    android:background="@color/color_ffffff"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>




            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="41dp"
                app:shape_roundRect_topRightRadius="12dp"
                app:shape_roundRect_topLeftRadius="12dp"
                app:shape_roundRect_bottomLeftRadius="12dp"
                app:shape_roundRect_bottomRightRadius="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cancel_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="취소"
                    android:textStyle="bold"
                    android:background="@color/color_6e7583"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16dp" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>


        </LinearLayout>


    </RelativeLayout>

    </io.github.florent37.shapeofview.shapes.RoundRectView>


</LinearLayout>