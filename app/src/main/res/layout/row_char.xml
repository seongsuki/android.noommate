<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    
    <io.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:shape_roundRect_bottomLeftRadius="26dp"
        app:shape_roundRect_topLeftRadius="26dp"
        app:shape_roundRect_topRightRadius="26dp"
        app:shape_roundRect_bottomRightRadius="26dp">

        <RelativeLayout
            android:id="@+id/background_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/char1_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/char2_image_view"
                android:src="@drawable/resource_char"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </RelativeLayout>

    </io.github.florent37.shapeofview.shapes.RoundRectView>

</LinearLayout>