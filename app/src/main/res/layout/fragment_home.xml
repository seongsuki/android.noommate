<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/default_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_fafafc"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/color_ffffff">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="하우스 만들기"
                android:textColor="@color/color_3a3a3c"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/alarm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="11dp"
                android:layout_marginBottom="2dp"
                android:padding="10dp" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/color_f9f9f9"
            android:src="@drawable/img_makehouse" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="하우스를 지어주세요! "
                android:textColor="@color/color_3a3a3c"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                android:text="메이트를 초대하여 우리 하우스의\n일정과 할 일을 나누어 공유해보세요"
                android:textColor="@color/color_3a3a3c"
                android:textSize="16dp" />

            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="24dp"
                app:shape_roundRect_bottomLeftRadius="12dp"
                app:shape_roundRect_bottomRightRadius="12dp"
                app:shape_roundRect_topLeftRadius="12dp"
                app:shape_roundRect_topRightRadius="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/add_house_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="하우스 만들기"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>

        </LinearLayout>

        <io.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            app:shape_roundRect_bottomLeftRadius="8dp"
            app:shape_roundRect_bottomRightRadius="8dp"
            app:shape_roundRect_topLeftRadius="8dp"
            app:shape_roundRect_topRightRadius="8dp">

            <RelativeLayout
                android:id="@+id/house_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_ffffff">

                <LinearLayout
                    android:id="@+id/join_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="초대받은 하우스가 있다면?"
                        android:textColor="@color/color_3a3a3c"
                        android:textSize="12dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하우스 코드 입력하기"
                        android:textColor="@color/color_3a3a3c"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/icon_small_right" />
            </RelativeLayout>

        </io.github.florent37.shapeofview.shapes.RoundRectView>

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/anim_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/color_ffffff"
        app:contentInsetStart="0dp"
        app:layout_collapseMode="pin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="138dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@drawable/logo_01" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/alarm_list_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/clear"
                android:padding="10dp"
                android:src="@drawable/bell" />


        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/house_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="false"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <io.github.florent37.shapeofview.shapes.RoundRectView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:shape_roundRect_topRightRadius="24dp"
                        app:shape_roundRect_topLeftRadius="24dp"
                        app:shape_roundRect_bottomRightRadius="24dp"
                        app:shape_roundRect_bottomLeftRadius="24dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="236dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/house_image_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/add_button"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="16dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/add_btn" />


                    </RelativeLayout>

                    </io.github.florent37.shapeofview.shapes.RoundRectView>



                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="81dp"
                app:shape_roundRect_bottomLeftRadius="999dp"
                app:shape_roundRect_bottomRightRadius="999dp"
                app:shape_roundRect_topLeftRadius="999dp"
                app:shape_roundRect_topRightRadius="999dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/home"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="13dp"
                        android:background="@color/colorAccent"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MY 하우스"
                            android:textSize="14dp"
                            android:layout_marginTop="18dp"
                            android:textColor="@color/color_ffffff" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/house_name_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginBottom="18dp"
                            android:textColor="@color/color_ffffff"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>


            </io.github.florent37.shapeofview.shapes.RoundRectView>


        </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/noommate_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />


                <RelativeLayout
                    android:id="@+id/schedule_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/date_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_3a3a3c"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/cnt_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:text=""
                        android:textColor="@color/color_6e7583"
                        android:textSize="12dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    
                    <io.github.florent37.shapeofview.shapes.RoundRectView
                        android:id="@+id/non_layout"
                        android:layout_width="match_parent"
                        android:layout_height="92dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        app:shape_roundRect_topRightRadius="8dp"
                        app:shape_roundRect_topLeftRadius="8dp"
                        app:shape_roundRect_bottomRightRadius="8dp"
                        app:shape_roundRect_bottomLeftRadius="8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/default_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_fafafc"
                            android:text="하우스\n일정이 없어요"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/color_e4e6eb"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                    </io.github.florent37.shapeofview.shapes.RoundRectView>

                    <com.github.islamkhsh.CardSliderViewPager
                        android:id="@+id/todo_view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardSlider_baseShadow="0dp"
                        app:cardSlider_indicator="@id/photo_indicator"
                        app:cardSlider_otherPagesWidth="0dp"
                        app:cardSlider_pageMargin="0dp"
                        app:cardSlider_smallScaleFactor="1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.github.islamkhsh.CardSliderIndicator
                        android:id="@+id/photo_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        app:defaultIndicator="@drawable/dot_default"
                        app:selectedIndicator="@drawable/dot_selected"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp"
                        app:indicatorsToShow="5" />


                </RelativeLayout>


                <io.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="16dp"
                    app:shape_roundRect_bottomLeftRadius="12dp"
                    app:shape_roundRect_bottomRightRadius="12dp"
                    app:shape_roundRect_topLeftRadius="12dp"
                    app:shape_roundRect_topRightRadius="12dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/more_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:text="할 일 보기"
                        android:textColor="@color/color_ffffff"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </io.github.florent37.shapeofview.shapes.RoundRectView>


                <RelativeLayout
                    android:id="@+id/note_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="알림장"
                        android:textColor="@color/color_3a3a3c"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_small_right" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/note_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp" />


            </LinearLayout>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>