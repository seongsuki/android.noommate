<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    
    <io.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/profile_layout"
        app:shape_roundRect_borderWidth="3dp"
        app:shape_roundRect_borderColor="@color/color_f1f1f4"
        app:shape_roundRect_bottomLeftRadius="26dp"
        android:background="@color/color_f1f1f4"
        app:shape_roundRect_topRightRadius="26dp"
        app:shape_roundRect_topLeftRadius="26dp"
        app:shape_roundRect_bottomRightRadius="26dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f1f1f4"/>

        <RelativeLayout
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:background="@color/color_f1f1f4">

            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:id="@+id/back_layout"/>


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/back5"
                android:layout_centerInParent="true"
                android:id="@+id/back_image_view"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/face_image_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/group_191" />



        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/select_image_view"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:src="@drawable/select"/>
    </io.github.florent37.shapeofview.shapes.RoundRectView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="12dp"
        android:textColor="@color/color_3a3a3c"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"/>
    
</LinearLayout>