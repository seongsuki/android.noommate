<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <io.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:shape_roundRect_bottomLeftRadius="8dp"
        app:shape_roundRect_bottomRightRadius="8dp"
        app:shape_roundRect_topLeftRadius="8dp"
        app:shape_roundRect_topRightRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/calendar_day_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:fontFamily="@font/spoqahansansneobold"
                android:gravity="center"
                android:textColor="@color/color_222b45"
                android:textSize="12dp"
                tools:text="31" />

            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:id="@+id/record_point_layout"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:visibility="gone"
                app:shape_roundRect_bottomLeftRadius="2.5dp"
                app:shape_roundRect_bottomRightRadius="2.5dp"
                app:shape_roundRect_topLeftRadius="2.5dp"
                app:shape_roundRect_topRightRadius="2.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/today_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/spoqahansansneobold"
                android:layout_marginTop="3dp"
                android:text="today"
                android:textColor="@color/color_fcece8"
                android:textSize="9dp" />
        </RelativeLayout>


    </io.github.florent37.shapeofview.shapes.RoundRectView>


</RelativeLayout>